html
    head
        title= titel
        script(src='/js/nyttRecept.js').

    body
        a(href='/') Tillbaka till alla recept
        h1= titel
        h2 Name på receptet
        input#title(type='text' name='title' placeholder='Antal')
        h2 Ingredienser
        div#ingredients
            div#0.ingredient
                input(type='text' name='amount' placeholder='Antal')
                input#enhet1(type='text' name='unit' placeholder='Enhet')
                input#vara1(type='text' name='product' placeholder='Vara')
                button(onclick='removeIngredient(0)') Ta bort
        button(onclick='addIngredient()') Lägg till ingredient
        
        h2 Instruktioner
        div#instructions
            div#0.instruction
                input(type='text' name='instruction' placeholder='Instruktion')
                button(onclick='removeInstruction(0)') Ta bort
        button(onclick='addInstruction()') Lägg till instruktion
        br
        br
        button(onclick='submitRecipe()') Spara recept
        